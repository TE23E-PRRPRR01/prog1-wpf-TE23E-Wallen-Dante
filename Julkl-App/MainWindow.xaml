<Window x:Class="Julkl_App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Julkl_App"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800"
    Background="#D4D7F">
    <StackPanel Margin="10">
        <Label FontSize="32">Lista över julklappar</Label>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Label>Antal julklappar:</Label>
            <TextBox Width="100"></TextBox>
            <Button Padding="10">Ange</Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Label FontWeight="Bold">Julklapp:</Label>
            <TextBox Width="100"></TextBox>

            <Label FontWeight="Bold">Mottagare:</Label>
            <TextBox Width="100"></TextBox>

            <Button Padding="10">Lägg till</Button>
            <Button Padding="10">Byt ut</Button>
        </StackPanel>

        <Label FontSize="16">Julklappar:</Label>
        <TextBlock>h</TextBlock>
        <TextBox>Placeholder</TextBox>
    </StackPanel>
</Window>