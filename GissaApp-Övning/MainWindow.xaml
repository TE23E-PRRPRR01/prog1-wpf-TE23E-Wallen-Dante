<Window x:Class="GissaApp_Övning.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:GissaApp_Övning"
    mc:Ignorable="d"
    Title="Gissa nummer" Height="800" Width="400"
    SizeToContent="WidthAndHeight">
    <StackPanel Orientation="Vertical">
        <Label Margin="10" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center">Gissa numret</Label>
        <Label Margin="10">Gissa på ett nummer mellan 1 och 100 :</Label>
        <TextBox Name="txbInput" Margin="10"></TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click="klickGissa" Margin="10" Padding="5" Width="150">Gissa</Button>
            <Button Click="klickVisaFacit" Margin="10" Padding="5" Width="150">Visa Facit</Button>
        </StackPanel>
        <TextBox Name="txbResultat" Margin="10"></TextBox>

        <Label Margin="10">Historik:</Label>
        <TextBox Name="txbHistorik" Margin="10" Height="200"></TextBox>
        <Button Click="klickHistorik" Margin="10" Padding="5" Width="150">Visa gissningar</Button>
        <Button Click="klickSpelaIgen" Margin="10" Padding="5" Width="150">Spela igen</Button>

    </StackPanel>
</Window>